<a
  class="recommend-list-item J_RecommendListItem"
  data-id="{{id}}"
  data-course_id="{{course_id}}"
  href="//m.ke.qq.com/course/{{course_id}}"
>
<!-- target="_blank" -->
  <div class="item-cover">
    <img class="cover-img" src="//g.alicdn.com/s.gif" data-src="{{img_src}}" alt="" /> <!-- src="" -->
  </div>
  <div class="item-info">
    <h1 class="item-title">{{title}}</h1>
    {{labels}}
    <div class="apply-info">
      <span class="price-info">{{price}}</span>
      <span class="apply-num-info">
        <span class="apply-num">{{applyNum}}</span>
        人最近报名
      </span>
    </div>
  </div>
</a>
